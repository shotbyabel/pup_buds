<h1 class="teal teal lighten-1 white-text z-depth-1 white-text z-depth-3 center align">Puppy Profile</h1>
<div class="row">
  <div class="col s12">
    <div class="row">
      <div class="input-field col s6">
        <input name="puppy[name]" id="puppy_name" type="text" class="validate">
        <label for="puppy_name">Puppy Name</label>
      </div>
      <div class="input-field col s6">
        <input name="puppy[age]" id="age" type="date" class="datepicker validate">
        <label for="age">Puppy Age</label>
      </div>
      <br>
      <br>
      <div class="file-field input-field col s12">
        <h5 class="pup-photo">Puppy profile photo</h5>
        <input name="puppy[photo]" class="file-path validate" type="text"/>
        <div class="btn center-align red accent-2 z-depth-2">
          <span>File</span>
          <input type="file" />
        </div>
      </div>
      <div class="input-field col s6">
        <select name="puppy[friendliness]"class="browser-default">
          <option value="" disabled selected>Friendliness Level</option>
          <option value="1">Super Friendly</option>
          <option value="2">Friendly</option>
          <option value="3">Not so Friendly</option>
        </select>
      </div>
      <div class="input-field col s6">
        <select name="puppy[size]" class="browser-default">
          <option value="" disabled selected>Size</option>
          <option value="1">Huge puppy</option>
          <option value="2">Medium puppy</option>
          <option value="3">Small puppy</option>
        </select>
        <br>
        <br>
      </div>

      <button class="btn waves-effect waves-light btn-sent register-btn red accent-2 z-depth-2" type="submit" name="action">Submit<i class="material-icons red lighten-2"></i></button>

    </div>
  </div>
</div>
