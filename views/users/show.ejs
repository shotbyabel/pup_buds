            </div>

            <div class="card-content">
              <p>Shadow is a very good boy</p>
            </div>
            <div class="card-action">
              <a href="#">See Puppy Page</a>
            </div>
            <div class="card-action">
              <a href='/puppies/:id/edit'>Edit Puppy Info</a>
            </div>
          </div>
        </div>
      </div>
    <!-- <//% });%> -->

      <div class="container center-align">
        <a class="waves-effect waves-light red btn" href="/puppies/new">Add Puppy</a>
      </div>


    <!-- end of puppy stuff -->

    <form action="/users/show/:id" method="GET" enctype="multipart/form-data">
    </form>

    <!-- footer -->
    <%- include ../partials/feeter %>

